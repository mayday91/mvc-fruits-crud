{% layout 'layout.liquid' %}

{% block content %}

<div class="container-md">
    <article>

    <h2>Name: {{fruit.name}}</h2>
    <br>
    <h3>
        {% if fruit.readyToEat %}
        Ripe and ready to eat!
        {% else %}
        Not ripe! Don't eat yet!
        {% endif %}

    </h3>
    <br>
    <h4>Color: {{fruit.color}}</h4>
    <br>

    <div class="btn-group">
    <a href="{{fruit._id}}/edit" class="btn btn-primary">Edit Fruit</a>

    <form action="/fruits/{{fruit._id}}?_method=DELETE"method="POST">
    <input type="submit" value="Delete" class="btn btn-danger">    
    </form>
    </div>

    </article>
</div>

{% endblock %}
